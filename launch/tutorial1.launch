<?xml version="1.0"?>

<launch>

	<!-- Some general parameters -->
	<param name="use_sim_time" value="true" />
	<rosparam file="$(find marc_bot)/param/ros.yaml"/>

	<!-- Start Stage simulator with a given environment -->
	<include file="$(find marc_bot)/launch/hector_slam.launch"/>
	<!-- Start the Operator to control the simulated robot -->
	<node name="Operator" pkg="nav2d_operator" type="operator" >
		<remap from="scan" to="scan"/>
		<remap from="cmd_vel" to="cmd_vel_input"/>
		<rosparam file="$(find marc_bot)/param/operator.yaml"/>
		<rosparam file="$(find marc_bot)/param/costmap.yaml" ns="local_map" />
	</node>
	
	<node pkg="marc_bot" name="vel_remap" type="vel_remap.py"> </node>

	<!-- Start the joystick-driver and remote-controller for operation-->
	<!-- <node name="keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" /> -->

	<node pkg="tf2_ros" type="static_transform_publisher" name="base_footprint_broadcast" args="0  0  0  0  0  0  base_link base_footprint"/>
	<node pkg="tf2_ros" type="static_transform_publisher" name="odom_broadcast" args="0  0  0  0  0  0  map odom"/> 
	
	<!-- RVIZ to view the visualization -->
	<!--<node name="RVIZ" pkg="rviz" type="rviz" args=" -d $(find marc_bot)/launch/tutorial1.rviz" />
	<node name="RVIZ" pkg="rviz" type="rviz" args=" -d $(find marc_bot)/rviz_config/hector_marc.rviz" />-->

</launch>
